<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-52dp"
        app:srcCompat="@drawable/restaurant_in_valkenswaard" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="417dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="191dp"
        app:srcCompat="@drawable/restaurant_in_valkenswaard" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="416dp"
        android:layout_height="311dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-29dp"
        app:srcCompat="@drawable/restaurant_in_valkenswaard" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many chicken?"
        android:id="@+id/txtChicken"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="17dp"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txtChicken"
        android:id="@+id/getChicken"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:text="0"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtChicken"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="How many eggs?"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:id="@+id/txtEgg"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getChicken"
        android:layout_toEndOf="@id/txtEgg"
        android:layout_marginStart="10dp"
        android:id="@+id/getEgg"
        android:inputType="number"
        android:text="0"
        android:textColor="@color/white"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/getChicken"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/drinkable"
        android:outlineSpotShadowColor="@color/white"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/requestButton"
        android:layout_below="@+id/txtEgg"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Receive this request from a Customer"
        android:textColor="@color/white"
        android:backgroundTint="@color/material_on_background_disabled"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requestButton"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:text="Sent all Customers' request to the Cook"
        android:textColor="@color/white"
        android:id="@+id/sentRequestToCook"
        android:backgroundTint="@color/material_on_background_disabled"/>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/servePreparedFoodToTheCustomers"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sentRequestToCook"
        android:id="@+id/tztQuality"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sentRequestToCook"
        android:layout_toEndOf="@id/tztQuality"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/quality"
        android:inputType="number"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tztQuality"
        android:layout_centerInParent="true"
        android:text="Serve prepared food to the customers"
        android:layout_marginTop="20dp"
        android:id="@+id/servePreparedFoodToTheCustomers"
        android:backgroundTint="@color/material_on_background_disabled"
        />


</RelativeLayout>
